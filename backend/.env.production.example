# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/execapp?retryWrites=true&w=majority

# Security
JWT_SECRET=your_secure_random_256_bit_secret_key_here_change_this
JWT_EXPIRES_IN=7d

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key_here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=AKIA_your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=execapp-files

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# Optional: Sentry Error Tracking
SENTRY_DSN=

# Optional: Redis (if using)
REDIS_URL=

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
