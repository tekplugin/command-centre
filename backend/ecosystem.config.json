{
  "apps": [{
    "name": "execapp-backend",
    "script": "./dist/index.js",
    "instances": 1,
    "exec_mode": "cluster",
    "env": {
      "NODE_ENV": "production"
    },
    "error_file": "./logs/error.log",
    "out_file": "./logs/out.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "autorestart": true,
    "watch": false,
    "max_memory_restart": "1G",
    "env_production": {
      "NODE_ENV": "production"
    }
  }]
}
