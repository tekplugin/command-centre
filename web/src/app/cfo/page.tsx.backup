      totalReliefs,
      taxablePay,
      taxPayable: monthlyTaxPayable,
      minimumTax,
      taxDue,
      hmo,
      hmoCompany,
      loan,
      wht,
      penalty,
      netPay,
      totalDeductions
    };
  };

